    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img src="../assets/images/xmen-red-logo.png" width="30" height="30" class="d-inline-block align-top" alt=""></a>
                <p class="navbar-text" style="font-family: 'Cinzel Decorative', cursive; font-size: 20px; ">Xavier School for the Gifted</p>
            </div>
           
        </div>
